                                </td>
                                <td>
                                    ${row.CellPhone}
                                </td>
                                <td>
                                    <a href="/Nurses/Edit/${row.NurseId
                                        }" class="table-action-btn h3"><i class="mdi mdi-pencil-box-outline text-success"></i></a>
                                </td>
                                `;
                                    line += '</tr>';
                                    $("#tblNurses tbody").append(line);
                                });

                            //$("#tblNurses tbody").append(line);
                        }
                    },
                    error: function(error) {
                        console.log(error);
                    }
                });

            });
