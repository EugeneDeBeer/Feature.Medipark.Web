    <script type="text/javascript">

        $(function() {
            $('.not-found').hide();

            function getFormData(data) {
                var unindexed_array = data;
                var indexed_array = {};

                $.map(unindexed_array,
                    function(n, i) {
                        indexed_array[n['name']] = n['value'];
                    });

                return indexed_array;
            }

            //  Get table data
            //tblSearch
            $('#tblSearch').click(() => {

                var searchParams = {
                    firstName: $("#search-input").val(),
                    lastName: $("#search-input").val()
                };

                $.ajax({
                    type: 'GET',
                    url: 'http://localhost:50566/api/v1/Nurse/AdvanceSearch',
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    //async:true,
                    data: searchParams,
                    success: function(res) {

                        results = JSON.parse(res);
                        console.log(results);
                        console.log(results.length);

                        $("#tblNurses tbody tr").remove();

                        //$.each(res,
                        //    (i, row) => {
                        //        var line = '<tr>';
                        //        line +=
                        //            `
                        //        <td class="hidden">
                        //            ${row.NurseId}
                        //        </td>
                        //        <td>
                        //            ${row.FirstName}
                        //        </td>
                        //        <td>
                        //            ${row.LastName}
                        //        </td>
                        //        <td>
                        //            ${row.Email1}
                        //        </td>
                        //        <td>
                        //            ${row.CellPhone}
                        //        </td>
                        //        <td>
                        //            <a href="/Nurses/Edit/${row.NurseId}" class="table-action-btn h3"><i class="mdi mdi-pencil-box-outline text-success"></i></a>
                        //        </td>
                        //        `;
                        //        line += '</tr>';
                        //        $("#tblNurses tbody").append(line);
                        //    });

                        if (results === null || results === undefined || results.length <= 0) {
                            $('.not-found').show();
                        } else if (results.length > 0) {
                            $('.not-found').hide();

                            var line = null;
                            $.each(results,
                                (i, row) => {
                                    line = '<tr>';
                                    line +=
                                        `
                                <td class="hidden">
                                    ${row.NurseId}
                                </td>
                                <td>
                                    ${row.FirstName}
                                </td>
                                <td>
                                    ${row.LastName}
                                </td>
                                <td>
                                    ${row.Email1}
                                </td>
                                <td>
                                    ${row.CellPhone}
                                </td>
                                <td>
                                    <a href="/Nurses/Edit/${row.NurseId
                                        }" class="table-action-btn h3"><i class="mdi mdi-pencil-box-outline text-success"></i></a>
                                </td>
                                `;
                                    line += '</tr>';
                                    $("#tblNurses tbody").append(line);

                                    console.log(`${i + 1}: ${line}`)
                                });

                            $("#tblNurses tbody").append(line);
                        }

                        //$("#tblNurses tbody").append(line);


                    },
                    error: function(error) {
                        console.log(error);
                    }
                });

            });

            //  Filtering data table
            $("#search-input").keyup(function() {

                var searchKey = $(this).val();

                var filter, table, tr, firstName, lastName, email, i;

                filter = searchKey.toUpperCase();

                tr = $("#tblNurses tr");

                for (i = 0; i < tr.length; i++) {
                    firstName = tr[i].getElementsByTagName("td")[1];
                    lastName = tr[i].getElementsByTagName("td")[2];
                    email = tr[i].getElementsByTagName("td")[3];

                    if (firstName) {
                        if (firstName.innerHTML.toUpperCase().indexOf(filter) > -1 ||
                            lastName.innerHTML.toUpperCase().indexOf(filter) > -1 ||
                            email.innerHTML.toUpperCase().indexOf(filter) > -1) {
                            tr[i].style.display = "";
                        } else {
                            tr[i].style.display = "none";
                        }
                    }
                }
            });

            $('#advanceSearch').click(() => {

                var searchParams = $('#add-patient').serializeArray();
                advancedSearch();

                $.ajax({
                    type: 'GET',
                    url: 'http://localhost:50566/api/v1/Nurse/AdvanceSearch',
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    async: true,
                    data: getFormData(searchParams),
                    success: function(res) {

                        $("#tblNurses tbody tr").remove();

                        var results = JSON.parse(res);

                        if (results === null || results === undefined || results.length <= 0) {
                            $('.not-found').show();
                        } else if (results.length > 0) {
                            $('.not-found').hide();

                            var line = null;
                            $.each(results,
                                (i, row) => {
                                    line = '<tr>';
                                    line +=
                                        `
                                <td class="hidden">
                                    ${row.NurseId}
                                </td>
                                <td>
                                    ${row.FirstName}
                                </td>
                                <td>
                                    ${row.LastName}
                                </td>
                                <td>
