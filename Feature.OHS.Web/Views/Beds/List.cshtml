@model IEnumerable<Feature.OHS.Web.ViewModels.BedViewModel>

@{
    ViewData["Title"] = "List of beds";
}

<h2>All Beds</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BedId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var bed in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => bed.BedId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bed.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bed.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bed.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bed.ShortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => bed.Type)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => bed.LocationId)
            </td>
           
           
            <td>
                @Html.DisplayFor(modelItem => bed.Rate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
