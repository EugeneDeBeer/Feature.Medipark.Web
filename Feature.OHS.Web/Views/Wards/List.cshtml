@model IEnumerable<Feature.OHS.Web.ViewModels.Lists.WardListViewModel>

@{
    ViewData["Title"] = "List of wards";
}

<h2>All wards</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WardId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalId)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.NumberOfBeds)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.RoomOccupancyLevel)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Shortname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxRooms)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.WardLayout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Longitute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Status)
            </th>*@
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var ward in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => ward.WardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.HospitalId)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => ward.NumberOfBeds)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => ward.RoomOccupancyLevel)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => ward.Shortname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.ShortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.MinRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.MaxRooms)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => ward.WardLayout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.Location)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => ward.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.Size)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => ward.Longitute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ward.Latitude)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => ward.Status)
            </td>*@            
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id= ward.WardId }) |
                @Html.ActionLink("Details", "Details", new {  id= ward.WardId }) |
                @Html.ActionLink("Delete", "Delete", new {  id= ward.WardId })
            </td>
        </tr>
}
    </tbody>
</table>
