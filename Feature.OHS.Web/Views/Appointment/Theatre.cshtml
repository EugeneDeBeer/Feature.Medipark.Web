        //        $("#appointmentErrorModal").modal("show");
        //    }
        //} else {
        //    $("#appointmentErrorModal").modal("hide");
        //}

        //  PROCEDURE CODES DROPDOWN FIXES

        //  HARD-CODED FOR DEMO

        var data = {
            "AAA": [
                { id: "04B00ZZ", text: "04B00ZZ" },
