        var appointments = [];
        $.ajax({
                type: "Get",
                url: "/Appointment/GetTheatreAppointments",
                success: function (data) {
                    $("#loader").addClass('hidden');

                    $.each(data, function (i, v) {
                        //console.log(v);

                        appointments.push({
                            id: v.AppointmentId,
                            title: v.Title,
                            description: v.Description,
                            start: v.Start,//.format('YYYY-MM-DD'),
                            end: v.End,//v.End != null ? moment(v.End).format('YYYY-MM-DD') : null,
