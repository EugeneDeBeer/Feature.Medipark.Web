<script>
    function myFunction() {
        var x = document.getElementById("patientsearchId");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
    $(document).ready(function () {

        var appointments = [];
        $.ajax({
            type: "Get",
            url: "/Appointment/GetAppointments",
            success: function (data) {
                //console.log(data);

                $.each(data, function (i, v) {
                    //console.log(v);

                    appointments.push({
                        id: v.AppointmentId,
                        title: v.Title,
                        description: v.Description,
                        start: v.Start,//.format('YYYY-MM-DD'),
                        end: v.End,//v.End != null ? moment(v.End).format('YYYY-MM-DD') : null,
                        allDay: false
                    });
                });

                //console.log(appointments);

                //  GenerateCalender(appointments);
            },
            error: function (error) {
                alert('failed')

            }
        }

        );

        $("#patientSearchId").on("click", function (e) {
            //e.preventDefault();

            var idNumber = $("#SearchIdNumber").val();

            var button = $(this);

            button.attr("href", "/Appointment/GetAppointment?id=" + idNumber);
            button.click();

        });


        $("#appointmentSearchId").on("click", function (e) {
            //e.preventDefault();

            var idNumber = $("#PatientIdNumber").val();

            var button = $(this);

            button.attr("href", "/Appointment/SearchAppointment?id=" + idNumber);
            button.click();

        });
        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,basicWeek,basicDay,agenda'
            },
            buttonText: {
                agenda: 'Hours'
            },
            eventRender: function(event, $el) {
                $el.popover({
                    html: true,
                    title: event.title,
                    //content: `Time:${moment(event.start).format("HH:mm:ss")} ${event.description}`,
                    content: `
                            <div class="row">
                                <div class="col-md-12">
                                     <p>Time: <b>${moment(event.start).format("HH:mm:ss")}</b></p>
                                </div>
                                <div class="col-md-12">
                                    <p>Description: <b>${event.description}</b></p>
                                </div>
                            </div>
                        `,
                    trigger: 'hover',
                    placement: 'top',
                    container: 'body'
                });
            },
            defaultDate: new Date(),
            navLinks: true, // can click day/week names to navigate views
            editable: true,
            selectable: true,
            eventLimit: true, // allow "more" link when too many events
            eventColor: '#00bfff',
            events: "/Appointment/GetAppointments",
            eventClick: function(calEvent, jsEvent, view) {

                $('#appointmentModal');
                var $description = $('#appdiv').html('content');
                $('#appointmentModal #appointmentDetails').empty().html($description);
                $('#appointmentModal').modal();

                var d = moment(calEvent.start).format("YYYY-MM-DD");
                var t = moment(calEvent.start).format("HH:mm:ss");

                $('#id').val(calEvent.id);
                $("#start").val(d);
                $('#time').val(t);
                $("#title").val(calEvent.title);
                $("#Description").val(calEvent.description);
                $('#appointmentModal').modal();

            },
            dayClick: function(date, calEvent, jsEvent, view) {

                $("#Start").val(date.format("YYYY-MM-DD"));
                $('#CreateAppointmentModal').modal();
            },
            select: function(startDate, endDate, calEvent, jsEvent, view) {
                $('#CreateAppointmentModal').modal();
            },
            eventDrop: function(event, delta, revertFunc, jsEvent, ui, view) {
                $('#appointmentModal');
                var $description = $('#appdiv').html('content');
                $('#appointmentModal #appointmentDetails').empty().html($description);

                var d = moment(event.start).format("YYYY-MM-DD");
                var t = moment(event.start).format("HH:mm:ss");

                $('#id').val(event.id);
                $("#start").val(d);
                $('#time').val(t);
                $("#title").val(event.title);
                $("#description").val(event.description);
                $('#appointmentModal').modal();
            }
        });


        $("#submit").on('click', function(event) {
            event.preventDefault();

            var formData = $("#doctorApppointmentCreateForm").serializeArray();

            console.log(getFormData(formData));

            $.ajax({
                type: "POST",
                //url: "/Appointment/Create",
                url: "/Appointment/Create",
                //data: JSON.stringify(formData),
                data: formData,
                success: function (response) {
                    $("#CreateAppointmentModal").modal("hide");

                    $("#appointmentSuccess").modal("show");

                    window.location.reload();
                },
                error: function (error) {
                    console.log(error);

                    $("#incompleteFormError").removeClass("hidden");
                }
            });
        });

        function getFormData(data) {
            var unindexed_array = data;
            var indexed_array = {};

            $.map(unindexed_array, function (n, i) {
                indexed_array[n['name']] = n['value'];
            });

            return indexed_array;
        }

    });
</script>
