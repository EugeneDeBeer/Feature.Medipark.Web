<!-- Begin page -->
<div id="wrapper">

    <div class="row">
        <div class="col-xs-12">
            <div class="page-title-box">
                <h4 class="page-title">Users </h4>
                <ol class="breadcrumb p-0 m-0">
                    <li>
                        <a href="#">Medipark</a>
                    </li>

                    <li class="active">
                        Users
                    </li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="add-patient-container">

                <h4 class="custom-modal-title">Registration</h4>

                <div class="custom-modal-text text-left">

                    @if (Model != null)
                    {
                        <form class="add-patient" method="post" id="add-patient">
                            @*<ul class="text-center" id="progressbar">
                                <li class="active">Create Account</li>
                                <li>Account Confirmation</li>
                            </ul>*@

                            <input type="hidden" asp-for="IdNumber" name="patientId" />

                            <!-- USER INFORMATION FIELD SET -->
                            <fieldset>
                                <h2 class="fs-title">Personal Information</h2>
                                <h3 class="fs-subtitle"></h3>
                                <!-- Begin What's Your First Name Field -->
                                <div class="col-lg-8 col-lg-offset-2">
                                    <div class="form-group form-inline">
                                        <label for="title">Title <span>*</span></label>
                                        <select asp-for="Title" class="form-control" id="title" placeholder="">
                                            @if (Model.Title == null)
                                            {
                                                <option>--Select option--</option>
                                            }
                                            else
                                            {
                                                <option value="@Model?.Title">@Model?.Title</option>
                                            }
                                            <option value="title">Title</option>
                                            <option value="mr">Mr</option>
                                            <option value="mrs">Mrs</option>
                                            <option value="miss">Miss</option>
                                            <option value="ms">Ms</option>
                                            <option value="prof">Prof</option>
                                            <option value="dr">Dr</option>
                                            <option value="rev">Rev</option>
                                            <option value="hon">Hon</option>

                                        </select>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <!-- End What's Your First Name Field -->

                                    <div class="form-group form-inline">
                                        <label for="firstName">First Name <span>*</span></label>
                                        <input asp-for="FirstName" type="text" name="firstName" class="form-control" id="firstName" placeholder="">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="middleName">Middle Name</label>
                                        <input asp-for="SecondName" type="text" class="form-control" id="middleName" placeholder="">
                                        <span asp-validation-for="SecondName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="lastName">Last Name <span>*</span></label>
                                        <input asp-for="LastName" type="text" name="lastName" class="form-control" id="lastName" placeholder="">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group form-inline">
                                        <label asp-for="UserName">User name</label>
                                        <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="password">Enter Password</label>
                                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="">@*<i class="glyphicon-eye-open" onclick="togglePassword(this);"></i>*@
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="confirmPassword">Confirm Password <span>*</span></label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="">@*<i class="glyphicon-eye-open" onclick="togglePassword(this);"></i>*@
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="genderId">Gender <span>*</span></label>
                                        <select name="genderId" class="form-control" id="gender" placeholder="">
                                            <option>--Select option--</option>
                                            <option value="0">Male</option>
                                            <option value="1">Female</option>
                                            <option value="2">Other</option>
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="dateOfBirth">Date of Birth <span>*</span></label>
                                        <input asp-for="DateOfBirth" type="date" name="dateOfBirth" class="form-control" id="dateOfBirth" data-date="" data-date-format="DD-MM-YYYY">
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-inline">
                                        <label for="idNumber">ID Number <span>*</span></label>
                                        <input asp-for="IdNumber" type="text" name="idNumber" class="form-control" id="idNumber" placeholder="Enter ID number">
                                        <span asp-validation-for="IdNumber" class="text-danger"></span>
                                    </div>

                                    @*<div class="form-group form-inline">
                                        <label for="age">Age</label>
                                        <input type="number" name="age" class="form-control" id="age" readonly="readonly">
                                    </div>*@

                                    <div class="form-group form-inline">
                                        <label for="idType">Identity Type <span>*</span></label>

                                        <select asp-for="IdentityType" name="identityType" class="form-control" id="identityType" placeholder="">
                                            <option>--Select option--</option>
                                            <option value="male">ID Document</option>
                                            <option value="female">Passport</option>
                                        </select>
                                        <span asp-validation-for="IdentityType" class="text-danger"></span>
                                    </div>


                                    <div class="form-group form-inline">
                                        <input type="submit" data-page="1" name="next" class="next action-button" value="Register" />
                                    </div>
                                </div>


                                    <div class="col-lg-12">

                                        <hr />
                                        Already have account? <a href="#">sign in here</a>
                                    </div>
                                    <!-- End Total Number of Constituents in Your Database Field -->





</fieldset>

                            <fieldset>
                                <h2 class="fs-title">Account Confirmation</h2>
                                <h3 class="fs-subtitle"></h3>

                                <div class="col-lg-8">
                                    <div class="form-group form-inline">
                                        <p class="text-center">The confirmation screen will come here</p>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    }

                </div>


            </div>


        </div>
    </div> <!-- end col -->

<div id="successModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Patient</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Patient has been successfully created.</p>
            </div>
            <div class="modal-footer">
                <a asp-action="Index" asp-controller="Patient" class="btn btn-secondary" data-dismiss="modal">OK</a>
            </div>
        </div>
    </div>
</div>

</div>